extends ../layout

block content
  .container
    h1.page-header List

    table.table.table-bordered
      thead
        tr
          th 제목
          th 도시
          th 상세주소
          //th 호스트
          th 등록날짜
          th 조회수
    
      tbody
        each post in posts
          tr

            td
              a(href='/posts/#{post.id}')= post.title
            td= post.city
            td= post.address
            //td= post.name
            td= moment(post.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td= post.read
