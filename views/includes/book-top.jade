extends ../layout

block content
  .container
  table.table.table-striped.table-bordered
    tr(style='vertical-align:top')
        td(style='width:350px; border-right:1px solid lightgrey; padding-right:12px; text-align:justify')
            .form-group
                label(for='city') 도시
                input.form-control(type='text', id='city', name='city', placeholder='City') 
        td(style='width:350px; border-right:1px solid lightgrey; padding-right:12px; text-align:justify')
            .form-group
                label(for='checkin') 체크인
                input.form-control(type='date', id='checkin', name='checkin')
            .form-group
                label(for='checkout') 체크아웃
                input.form-control(type='date', id='checkout', name='checkout')
        td(style='width:350px; border-right:1px solid lightgrey; padding-right:12px; text-align:justify')
            .form-group
                label(for='personnel') 인원수
                select.form-control(name='personnel')
                    option(value='1', selected) 1
                    option(value='2') 2
                    option(value='3') 3
                    option(value='4') 4
                    option(value='5') 5
        td(style='padding-left:10px')
            div.form-actions
                button.btn.default(type='#') 숙소 검색

        